<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:contentDescription="@string/obs"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainActivityNombreProyecto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="TOPCAL!"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageViewOBS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imageViewPTS"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewPRJ"
        app:layout_constraintTop_toTopOf="@+id/imageViewPRJ"
        app:srcCompat="@drawable/obs" />

    <ImageView
        android:id="@+id/imageViewPTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewOBS"
        app:layout_constraintTop_toTopOf="@+id/imageViewOBS"
        app:srcCompat="@drawable/pts" />

    <ImageView
        android:id="@+id/imageViewPRJ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOBS"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prj" />

    <ImageView
        android:id="@+id/imageViewDesorientacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imageViewPolig"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewBessel"
        app:layout_constraintTop_toTopOf="@+id/imageViewBessel"
        app:srcCompat="@drawable/desorientacion" />

    <ImageView
        android:id="@+id/imageViewPolig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/imageViewRadiar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewDesorientacion"
        app:layout_constraintTop_toTopOf="@+id/imageViewBessel"
        app:srcCompat="@drawable/poligonales" />

    <ImageView
        android:id="@+id/imageViewRadiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewPolig"
        app:layout_constraintTop_toTopOf="@+id/imageViewBessel"
        app:srcCompat="@drawable/radiar" />

    <ImageView
        android:id="@+id/imageViewBessel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewDesorientacion"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPRJ"
        app:srcCompat="@drawable/bessel" />


</androidx.constraintlayout.widget.ConstraintLayout>