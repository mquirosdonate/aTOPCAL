<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewPtsX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="X"
        app:layout_constraintBottom_toBottomOf="@+id/listPtsN2"
        app:layout_constraintStart_toEndOf="@+id/listPtsN2" />

    <TextView
        android:id="@+id/textViewPtsY2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Y"
        app:layout_constraintBottom_toBottomOf="@+id/listPtsN2"
        app:layout_constraintStart_toEndOf="@+id/textViewPtsX2" />

    <TextView
        android:id="@+id/textViewPtsZ2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Z"
        app:layout_constraintBottom_toBottomOf="@+id/listPtsN2"
        app:layout_constraintStart_toEndOf="@+id/textViewPtsY2" />

    <TextView
        android:id="@+id/textViewPtsDes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Σ"
        app:layout_constraintBottom_toBottomOf="@+id/listPtsN2"
        app:layout_constraintStart_toEndOf="@+id/textViewPtsZ2" />

    <TextView
        android:id="@+id/listPtsN2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="monospace"
        android:text="Número"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxValido"
        android:layout_width="114dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="select"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listPtsN2" />

    <CheckBox
        android:id="@+id/checkBoxFijoPlani"
        android:layout_width="103dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:text="fijo plani"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxValido"
        app:layout_constraintStart_toEndOf="@+id/checkBoxValido" />

    <CheckBox
        android:id="@+id/checkBoxFijoAlti"
        android:layout_width="103dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:text="fijo alti"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="@+id/checkBoxFijoPlani"
        app:layout_constraintStart_toEndOf="@+id/checkBoxFijoPlani" />
</androidx.constraintlayout.widget.ConstraintLayout>